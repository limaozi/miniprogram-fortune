/** analysis.wxss **/

page {
  background-color: #000;
  height: 100vh;
}

.analysis-page {
  width: 100%;
  height: 100vh;
  background: radial-gradient(circle at top, #111827 0, #020617 50%, #000 100%);
  display: flex;
  flex-direction: column;
}

.analysis-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  padding-top: 40rpx;
}

.analysis-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.analysis-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #ffffff;
  font-family: 'Palatino Linotype', 'Book Antiqua', Palatino, 'Times New Roman', serif;
}

.swipe-hint {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  font-family: 'PingFang SC', sans-serif;
}

.analysis-content {
  flex: 1;
  background-color: rgba(0, 0, 0, 0.65);
  border-radius: 10rpx;
  padding: 30rpx;
  overflow-y: auto;
}

.analysis-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: #ffffff;
  white-space: pre-wrap;
  word-wrap: break-word;
  font-family: 'PingFang SC', sans-serif;
}
