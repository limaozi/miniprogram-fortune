/** index.wxss **/

page {
  background-color: #000;
  height: 100vh;
}

.swiper-container {
  width: 100%;
  height: 100vh;
}

.page-root {
  width: 100%;
  height: 100vh;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  background: radial-gradient(circle at top, #111827 0, #020617 50%, #000 100%);
  overflow: hidden;
}

/* 塔罗菜单容器 */
.tarot-menu-container {
  width: 100%;
  padding: 30rpx 30rpx 20rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 10;
  flex-shrink: 0;
}

.tarot-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 20rpx;
  font-family: 'PingFang SC', sans-serif;
}

.tarot-menu-buttons {
  width: 100%;
  display: flex;
  flex-direction: row;
  gap: 15rpx;
  margin-bottom: 20rpx;
}

.tarot-menu-button {
  flex: 1;
  height: 70rpx;
  border-radius: 35rpx;
  border: none;
  font-size: 26rpx;
  font-weight: 500;
  font-family: 'PingFang SC', sans-serif;
  background: rgba(255, 255, 255, 0.2);
  color: #ffffff;
  box-sizing: border-box;
  line-height: 70rpx;
  padding: 0;
  margin: 0;
  transition: all 0.3s ease;
}

.tarot-menu-button.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
}

.tarot-menu-button:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.tarot-hint {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  text-align: left;
  line-height: 1.6;
  font-family: 'PingFang SC', sans-serif;
  padding: 20rpx 20rpx;
}

.tarot-canvas {
  width: 100%;
  flex: 1;
  display: block;
  position: relative;
  z-index: 1;
}

/* 加载状态覆盖层 */
.loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 200;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.2);
  border-top-color: #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 40rpx;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  font-family: 'PingFang SC', sans-serif;
}

/* 滑动提示覆盖层 */
.swipe-hint-overlay {
  position: absolute;
  bottom: 150rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(0, 0, 0, 0.7);
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  z-index: 100;
  animation: fadeInOut 2s ease-in-out infinite;
}

.swipe-hint-text {
  font-size: 28rpx;
  color: #ffffff;
  font-family: 'PingFang SC', sans-serif;
}

@keyframes fadeInOut {
  0%, 100% {
    opacity: 0.7;
  }
  50% {
    opacity: 1;
  }
}

/* 解析页面样式 */
.analysis-page-wrapper {
  width: 100%;
  height: 100vh;
  background: radial-gradient(circle at top, #111827 0, #020617 50%, #000 100%);
  display: flex;
  flex-direction: column;
}

.analysis-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 40rpx 30rpx;
  padding-top: 60rpx;
  min-height: 0; /* 重要：让 flex 子元素可以收缩 */
}

.analysis-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 30rpx;
  flex-shrink: 0; /* 头部不收缩 */
}

.analysis-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #ffffff;
  font-family: 'Palatino Linotype', 'Book Antiqua', Palatino, 'Times New Roman', serif;
}

.swipe-hint-text-small {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  font-family: 'PingFang SC', sans-serif;
}

.analysis-content {
  flex: 1;
  background-color: rgba(0, 0, 0, 0.65);
  border-radius: 20rpx;
  padding: 40rpx;
  /* scroll-view 需要明确的高度才能显示滚动条 */
  /* 高度将通过 JavaScript 动态设置 */
  min-height: 0; /* 允许收缩 */
}

.analysis-text-wrapper {
  min-height: 100%;
  padding-bottom: 20rpx;
}

.analysis-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: #ffffff;
  white-space: pre-wrap;
  word-wrap: break-word;
  font-family: 'PingFang SC', sans-serif;
  display: block;
}

/* 分析页面按钮区域 */
.analysis-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding: 30rpx 0;
  flex-shrink: 0;
}

.analysis-buttons .restart-button,
.analysis-buttons .back-button {
  width: 100%;
  height: 100rpx;
  border-radius: 50rpx;
  border: none;
  font-size: 32rpx;
  font-weight: 500;
  font-family: 'PingFang SC', sans-serif;
  box-sizing: border-box;
  line-height: 100rpx;
  padding: 0;
  margin: 0;
}

.analysis-buttons .restart-button {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
}

.analysis-buttons .back-button {
  background: rgba(255, 255, 255, 0.2);
  color: #ffffff;
}

.analysis-buttons .restart-button:active,
.analysis-buttons .back-button:active {
  transform: scale(0.98);
  opacity: 0.9;
}