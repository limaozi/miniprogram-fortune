/** mbti.wxss **/

page {
  background: radial-gradient(circle at top, #111827 0, #020617 50%, #000 100%);
  min-height: 100vh;
}

.mbti-container {
  width: 100%;
  min-height: 100vh;
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
}

.mbti-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
  padding-top: 40rpx;
}

.mbti-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 20rpx;
  font-family: 'PingFang SC', sans-serif;
}

.question-counter {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  font-family: 'PingFang SC', sans-serif;
}

.question-container {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.question-card {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  backdrop-filter: blur(10px);
}

.question-text {
  font-size: 32rpx;
  color: #ffffff;
  line-height: 1.6;
  font-family: 'PingFang SC', sans-serif;
}

.options-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 60rpx;
}

.option-item {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 15rpx;
  padding: 30rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.option-item.selected {
  background: rgba(102, 126, 234, 0.3);
  border-color: #667eea;
}

.option-text {
  font-size: 30rpx;
  color: #ffffff;
  font-family: 'PingFang SC', sans-serif;
}

.submit-button {
  width: 100%;
  height: 100rpx;
  border-radius: 50rpx;
  border: none;
  background: rgba(255, 255, 255, 0.2);
  color: rgba(255, 255, 255, 0.5);
  font-size: 32rpx;
  font-weight: 500;
  margin-top: auto;
  transition: all 0.3s ease;
}

.submit-button.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
}

.submit-button:active {
  transform: scale(0.98);
}

.result-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.result-card {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  backdrop-filter: blur(10px);
  width: 100%;
}

.result-title {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 30rpx;
  font-family: 'PingFang SC', sans-serif;
}

.result-type {
  font-size: 72rpx;
  font-weight: 700;
  color: #667eea;
  margin-bottom: 30rpx;
  font-family: 'PingFang SC', sans-serif;
  text-shadow: 0 0 20rpx rgba(102, 126, 234, 0.5);
}

.mbti-canvas {
  width: 300rpx;
  height: 300rpx;
  margin: 20rpx 0 30rpx 0;
  border-radius: 20rpx;
  overflow: hidden;
}

.result-description {
  font-size: 28rpx;
  color: #ffffff;
  line-height: 1.8;
  text-align: center;
  font-family: 'PingFang SC', sans-serif;
}

.restart-button,
.back-button {
  width: 80%;
  height: 100rpx;
  border-radius: 50rpx;
  border: none;
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
  font-family: 'PingFang SC', sans-serif;
}

.restart-button {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
}

.back-button {
  background: rgba(255, 255, 255, 0.2);
  color: #ffffff;
}

.restart-button:active,
.back-button:active {
  transform: scale(0.98);
}

/* 加载状态 */
.loading-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.2);
  border-top-color: #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 40rpx;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  font-family: 'PingFang SC', sans-serif;
}
