/** mbti.wxss **/

page {
  background: radial-gradient(circle at top, #111827 0, #020617 50%, #000 100%);
  min-height: 100vh;
}

.mbti-container {
  width: 100%;
  min-height: 100vh;
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
}

.mbti-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
  padding-top: 40rpx;
}

.mbti-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 20rpx;
  font-family: 'PingFang SC', sans-serif;
}

.question-counter {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  font-family: 'PingFang SC', sans-serif;
}

.question-container {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.question-card {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  backdrop-filter: blur(10px);
}

.question-text {
  font-size: 32rpx;
  color: #ffffff;
  line-height: 1.6;
  font-family: 'PingFang SC', sans-serif;
}

.options-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.option-item {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 15rpx;
  padding: 30rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.option-item.selected {
  background: rgba(102, 126, 234, 0.3);
  border-color: #667eea;
  box-shadow: 0 0 20rpx rgba(102, 126, 234, 0.3);
}

.option-indicator {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.option-circle {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 3rpx solid rgba(255, 255, 255, 0.5);
  background: transparent;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.option-circle.checked {
  border-color: #667eea;
  background: #667eea;
}

.option-checkmark {
  width: 20rpx;
  height: 20rpx;
  border: 3rpx solid #ffffff;
  border-top: none;
  border-right: none;
  transform: rotate(-45deg);
  margin-top: -4rpx;
}

.option-text {
  font-size: 30rpx;
  color: #ffffff;
  font-family: 'PingFang SC', sans-serif;
  flex: 1;
}

.button-container {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.submit-button {
  width: 100%;
  height: 100rpx;
  border-radius: 50rpx;
  border: none;
  background: rgba(255, 255, 255, 0.2);
  color: rgba(255, 255, 255, 0.5);
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.submit-button.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
}

.submit-button:active {
  transform: scale(0.98);
}

.result-swiper {
  width: 100%;
  height: 100vh;
  align-items: center;
}

.result-container {
  width: 100%;
  height: 100vh;
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  background: radial-gradient(circle at top, #111827 0, #020617 50%, #000 100%);
  box-sizing: border-box;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 30rpx;
  flex-shrink: 0;
}

.result-content {
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.result-content .result-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding-bottom: 30rpx;
  box-sizing: border-box;
}

.result-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  flex-shrink: 0;
}

/* 回顾页面样式 */
.review-container {
  width: 100%;
  height: 100vh;
  padding: 0 20rpx;
  display: flex;
  flex-direction: column;
  background: radial-gradient(circle at top, #111827 0, #020617 50%, #000 100%);
  box-sizing: border-box;
}

.review-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 30rpx;
  flex-shrink: 0;
}

.review-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
  font-family: 'PingFang SC', sans-serif;
}

.swipe-hint-text-small {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  font-family: 'PingFang SC', sans-serif;
}

.review-content {
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 20rpx;
  padding: 30rpx;
  width: 100%;
  max-width: 100%;
  box-sizing: border-box;
}

.review-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  width: 100%;
  padding-bottom: 30rpx;
}

.review-item {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  width: 100%;
}

.review-question-card {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 15rpx;
  backdrop-filter: blur(10px);
  width: 100%;
  box-sizing: border-box;
}

.review-question-number {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  font-family: 'PingFang SC', sans-serif;
  margin-bottom: 10rpx;
  display: block;
}

.review-question-text {
  font-size: 30rpx;
  color: #ffffff;
  line-height: 1.6;
  font-family: 'PingFang SC', sans-serif;
  display: block;
}

.review-options {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  width: 100%;
}

.review-option {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 12rpx;
  padding: 20rpx;
  border: 2rpx solid transparent;
  display: flex;
  align-items: center;
  gap: 15rpx;
  transition: all 0.3s ease;
  width: 100%;
  box-sizing: border-box;
}

.review-option.selected {
  background: rgba(102, 126, 234, 0.2);
  border-color: #667eea;
}

.review-option-indicator {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.review-option-circle {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  border: 3rpx solid rgba(255, 255, 255, 0.5);
  background: transparent;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.review-option-circle.checked {
  border-color: #667eea;
  background: #667eea;
}

.review-option-checkmark {
  width: 18rpx;
  height: 18rpx;
  border: 3rpx solid #ffffff;
  border-top: none;
  border-right: none;
  transform: rotate(-45deg);
  margin-top: -4rpx;
}

.review-option-text {
  font-size: 28rpx;
  color: #ffffff;
  font-family: 'PingFang SC', sans-serif;
  flex: 1;
}

.result-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
}

.result-title {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 30rpx;
  font-family: 'PingFang SC', sans-serif;
}

.result-type {
  font-size: 72rpx;
  font-weight: 700;
  color: #667eea;
  margin-bottom: 30rpx;
  font-family: 'PingFang SC', sans-serif;
  text-shadow: 0 0 20rpx rgba(102, 126, 234, 0.5);
  text-align: center;
  width: 100%;
}

.mbti-canvas {
  width: 300rpx;
  height: 300rpx;
  margin: 20rpx auto 30rpx auto;
  border-radius: 20rpx;
  overflow: hidden;
  display: block;
}

.result-description {
  font-size: 28rpx;
  color: #ffffff;
  line-height: 1.8;
  text-align: left;
  font-family: 'PingFang SC', sans-serif;
  margin-top: 30rpx;
  width: 100%;
  white-space: pre-wrap;
  word-wrap: break-word;
  box-sizing: border-box;
  padding: 0 20rpx;
}

.result-buttons .restart-button,
.result-buttons .back-button {
  width: 100%;
  height: 100rpx;
  border-radius: 50rpx;
  border: none;
  font-size: 32rpx;
  font-weight: 500;
  font-family: 'PingFang SC', sans-serif;
}

.restart-button {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
}

.back-button {
  background: rgba(255, 255, 255, 0.2);
  color: #ffffff;
}

.restart-button:active,
.back-button:active {
  transform: scale(0.98);
}

/* 加载状态 */
.loading-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.2);
  border-top-color: #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 40rpx;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  font-family: 'PingFang SC', sans-serif;
}
